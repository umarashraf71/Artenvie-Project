<link rel="stylesheet" href="/css/login.css" />

<div class="container mb-5">
    <div class="row" style="margin: 150px 0 110px 0; color: black;">
        <div class="col-lg-6 offset-lg-3 text-center">
            <div class="form-wrap">
                <h1 class="text-center">CONTACT US</h1>
                <form role="form" action="/home/sendquery" method="post" id="login-form" onsubmit="event.preventDefault();
                displaySpinner(this,'btn-contact')">

                    <% if (user == undefined) { %>
                    <div class="form-group">
                        <input required type="text" name="name" class="form-control" placeholder="Name" />
                    </div>

                    <div class="form-group">
                        <input required type="email" name="email" id="email" class="form-control" placeholder="Email" />
                    </div>
                    <% } %>

                    <div class="form-group">
                        <input required type="text" name="subject" class="form-control" placeholder="Subject" />
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Message"
                            required name="query"></textarea>
                    </div>

                    <input class="btn btn-primary btn-block btn-lg" type="submit" name="login" id="btn-contact"
                        value="Submit" />
                </form>
            </div>
        </div>
    </div>
</div>