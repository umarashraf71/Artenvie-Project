<link rel="stylesheet" href="/css/artists.css" type="text/css" />

<div class="road-bar">
	<div class="container">
		<div class="row">
			<div class="col-md-12 mb-0 clearfix">
				<a href="/home" class="float-left">Home</a><span class="ml-2 mb-0 float-left">/</span>
				<p class="text-black ml-2 float-left">Artists</p>
			</div>
		</div>
	</div>

	<div class="container">
		<div class="wrapper">
			<div class="float-left">
				<h1>Our Artists</h1>
			</div>

			<form
				class="float-right form-inline d-flex justify-content-center md-form form-sm active-purple-2"
				method="POST"
				action="/home/search/artists"
				autocomplete="off"
				onsubmit="event.preventDefault();
				displaySpinner(this,'searchBtn')"
			>
				<input class="form-control form-control-sm" type="text" placeholder="Search here ... " aria-label="Search" name="search" id="search" />
				<button type="submit" id="searchBtn" class="searchBtn">
					<i class="fa fa-search" aria-hidden="true"></i>
				</button>
			</form>
		</div>

		<div class="clearfix"></div>

		<div class="row all-artists mt-2">
			<% artists.forEach(artist => { %>

			<div class="col-md-4">
				<div class="details">
					<div class="img">
						<img src="/uploads/users/<%= artist.image %>" alt="Artist Profile Pic" />
					</div>
					<div class="info">
						<h3><%= artist.name %></h3>
						<p><%= artist.username %></p>
						<a href="/home/user/artist/profile/<%= artist.slug %> ">View Profile</a>
					</div>
				</div>

				<div class="container" style="margin-top: 50px">
					<div class="row">
						<div class="col-4 offset-4">
							<div class="line" style="height: 1px; background-color: rgb(228, 228, 228)"></div>
						</div>
					</div>
				</div>
			</div>

			<% }) %>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="pages">
				<nav aria-label="Page navigation example">
					<% if (pages > 0) { %>
					<ul class="pagination">
						<% if (current == 1) { %>
						<li class="page-item disabled">
							<a class="page-link">First</a>
						</li>
						<% } else { %>
						<li class="page-item">
							<a href="/home/artists/1" class="page-link">First</a>
						</li>
						<% } %> <% var i = (Number(current) > 6 ? Number(current) - 5 : 1) %> <% if (i !== 1) { %>
						<li class="page-item disabled"><a>...</a></li>
						<% } %> <% for (; i <= (Number(current) + 5) && i <= pages; i++) { %> <% if (i == current) { %>
						<li class="page-item active"><a class="page-link"><%= i %></a></li>
						<% } else { %>
						<li class="page-item">
							<a class="page-link" href="/home/artists/<%= i %>"><%= i %></a>
						</li>
						<% } %> <% if (i == Number(current) + 5 && i < pages) { %>
						<li class="page-item disabled"><a>...</a></li>
						<% } %> <% } %> <% if (current == pages) { %>
						<li class="page-item disabled"><a class="page-link">Last</a></li>

						<% } else { %>
						<li class="page-item">
							<a class="page-link" href="/home/artists/<%= pages %>">Last</a>
						</li>
						<% } %>
					</ul>
					<% } %>
				</nav>
			</div>
		</div>
	</div>
</div>
