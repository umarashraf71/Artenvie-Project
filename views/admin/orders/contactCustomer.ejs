<div class="container">
  <div class="adminPanel">
    <div class="row mb-4" style="margin-top: 45px">
      <div
        class="col-md-4"
        style="
          margin: 0 auto !important;
          padding: 20px 45px 30px 45px;
          border: 1px solid rgb(220, 220, 220);
          background: rgb(243, 243, 243);
          box-shadow: 0 0px 0px 0 rgba(0, 0, 0, 0.2),
            0 1px 7px 0 rgba(0, 0, 0, 0.19);
        "
      >
        <h4 class="mt-3 mb-4 text-info text-center">
          Contact <%= contactCustomer.username %>
        </h4>

        <hr
          style="
            background-color: #bad0d3 !important;
            height: 0.3px;
            border: none !important;
            width: 100%;
            margin: 20px 0px 30px 0px;
          "
        />

        <div class="row m-3">
          <div class="col-md-12 mt-2 mr-3">
            <div class="row">
              <div class="inbox-artwork-img">
                <img
                  src="/uploads/users/<%= contactCustomer.image %>"
                  alt=""
                  style="
                    height: 220px !important;
                    width: 220px !important;
                    box-shadow: 0 0.2rem 1rem rgba(0, 0, 0, 0.3);
                    border: 1px solid #bad0d3;
                  "
                />
              </div>
            </div>
          </div>

          <div class="col-md-12 mt-2">
            <div class="inbox-artist-text ml-5">
              <h5><%= contactCustomer.username %></h5>
              <a
                href="/admin/inbox/<%= contactCustomer.id %>/<%= contactCustomer.username %>"
                class="btn btn-info btn-sm"
                style="margin-left: -10px !important"
                >Start Chat</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
