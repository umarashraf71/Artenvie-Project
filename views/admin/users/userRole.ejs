<h2 class="mt-3 mb-3 text-info">Edit User</h2>

<form action="/admin/account/role/<%= User._id %>" method="POST" enctype="multipart/form-data">
	<div class="form-group">
		<label for="title">User Name:</label>
		<input type="text" class="form-control" value="<%= User.name %>" id="title" name="firstName" readonly />
	</div>

	<div class="form-group">
		<label for="title">Email:</label>
		<input type="text" class="form-control" value="<%= User.email %>" id="title" name="email" readonly />
	</div>

	<div class="form-group">
		<label>Assign Roles:</label>
		<label class="form-check" for="admin">
			<input type="checkbox" <% if (User.roles.includes('admin')) { %> <%=
				'checked' %> <% } %> name="Admin" /> Admin</label>
		<label class="form-check" for="user">
			<input type="checkbox" <% if (User.roles.includes('user')) { %> <%=
				'checked' %> <% } %> name="User" /> User</label>
	</div>

	<input type="submit" value="Update Details" class="btn btn-info btn-sm mt-2" />
</form>
</div>